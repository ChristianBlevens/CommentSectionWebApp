  "modules": {
    "comments": {
      "name": "Comments",
      "description": "Core commenting functionality",
      "version": "1.0.0",
      "dependencies": [],
      "config": {
        "maxCommentLength": 5000,
        "maxReplyDepth": 5,
        "enableVoting": true,
        "enableReplies": true,
        "enableMarkdown": true,
        "enableMentions": true,
        "sortOptions": ["likes", "popularity", "newest", "oldest"],
        "defaultSort": "likes"
