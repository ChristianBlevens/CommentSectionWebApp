        "maxReactionsPerComment": 1
      }
    },
    "markdown": {
      "name": "Markdown",
      "description": "Markdown rendering and processing",
      "version": "1.0.0",
      "dependencies": [],
      "config": {
        "enableSpoilers": true,
        "enableCodeHighlight": true,
        "enableYoutube": true,
        "enableMentions": true
      }
    }
  },
  "features": {
    "authentication": {
