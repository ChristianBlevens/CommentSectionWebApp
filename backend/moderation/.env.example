# Production Environment Configuration for Moderation Service
# Copy this file to .env and update with your production values

# Node environment
NODE_ENV=production

# Server configuration
PORT=3001

# Database configuration - PostgreSQL
DB_HOST=postgres-moderation
DB_PORT=5432
DB_NAME=moderation_db
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_456!

# Admin key for moderation management endpoints
# Generate a strong random key for production
ADMIN_KEY=CHANGE_THIS_STRONG_ADMIN_KEY_789xyz

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://YOUR_DOMAIN.com,https://www.YOUR_DOMAIN.com

# Moderation thresholds (optional - defaults shown)
SPAM_THRESHOLD=0.7
SENTIMENT_THRESHOLD=-3
CAPS_RATIO_THRESHOLD=0.8
MIN_TRUST_SCORE=0.1
MAX_TRUST_SCORE=1.0

# Logging level
LOG_LEVEL=info