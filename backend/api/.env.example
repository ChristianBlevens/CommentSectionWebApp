# Production Environment Configuration for Backend API
# Copy this file to .env and update with your production values

# Node environment
NODE_ENV=production

# Server configuration
PORT=3000

# Database configuration - PostgreSQL
DB_HOST=postgres-comments
DB_PORT=5432
DB_NAME=comments_db
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis configuration
REDIS_URL=redis://redis:6379

# Discord OAuth Configuration (REQUIRED)
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET
DISCORD_REDIRECT_URI=https://YOUR_DOMAIN.com/oauth-callback.html

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://YOUR_DOMAIN.com,https://www.YOUR_DOMAIN.com

# Initial moderators (comma-separated Discord user IDs)
# Format: discord_USER_ID (e.g., discord_123456789012345678)
INITIAL_MODERATORS=discord_YOUR_DISCORD_ID

# Moderation service URL (internal Docker network)
MODERATION_API_URL=http://moderation-service:3001

# Session configuration
SESSION_SECRET=CHANGE_THIS_RANDOM_64_CHAR_STRING_abcdef0123456789
SESSION_DURATION=86400

# Rate limiting (optional - defaults shown)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging level
LOG_LEVEL=info