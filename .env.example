# Discord Comment System Environment Configuration
# Copy this file to .env and update with your values

# ====================
# REQUIRED CONFIGURATION
# ====================

# Discord OAuth Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:8080/oauth-callback.html

# Moderation Admin Key
# Set a strong, unique key for admin endpoints
ADMIN_KEY=change_this_to_a_secure_random_string

# Initial Moderators (comma-separated Discord IDs)
# These users will automatically become moderators on first login
# Example: INITIAL_MODERATORS=123456789012345678,987654321098765432
# INITIAL_MODERATORS=

# ====================
# DATABASE CONFIGURATION
# ====================

# PostgreSQL Configuration
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Database Names
DB_NAME=comments_db
MODERATION_DB_NAME=moderation_db

# ====================
# SERVICE CONFIGURATION
# ====================

# Service Ports
API_PORT=3000
MODERATION_PORT=3001
FRONTEND_PORT=8080

# Service URLs (for inter-service communication)
MODERATION_API_URL=http://moderation-service:3001
BACKEND_API_URL=http://backend-api:3000

# Redis Configuration
REDIS_URL=redis://redis:6379

# ====================
# SECURITY CONFIGURATION
# ====================

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8080

# Session Secret (auto-generated if not provided)
# SESSION_SECRET=your_session_secret_here

# ====================
# PRODUCTION CONFIGURATION
# ====================

# Node Environment
NODE_ENV=production

# SSL/TLS Configuration (for production)
# ENABLE_SSL=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting (requests per minute)
# RATE_LIMIT_WINDOW=60000
# RATE_LIMIT_MAX_REQUESTS=100

# ====================
# OPTIONAL CONFIGURATION
# ====================

# Moderation Thresholds
# SENTIMENT_THRESHOLD=-3
# SPAM_SCORE_THRESHOLD=0.7
# CAPS_RATIO_THRESHOLD=0.8
# MIN_TRUST_SCORE=0.1
# MAX_TRUST_SCORE=1.0

# Cache Settings
# CACHE_TTL=300
# CACHE_CHECK_PERIOD=60

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=json

# Health Check
# HEALTH_CHECK_INTERVAL=30000

# Blocked Words Refresh Interval (milliseconds)
# BLOCKED_WORDS_REFRESH_INTERVAL=60000