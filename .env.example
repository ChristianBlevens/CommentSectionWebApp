# Docker Compose Production Environment Configuration
# Copy this file to .env and update with your production values
# Note: Backend services use their own .env files in backend/api/ and backend/moderation/

# PostgreSQL Database Configuration (shared by Docker Compose)
DB_USER=postgres
DB_NAME=comments_db
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Moderation Database Configuration
MODERATION_DB_NAME=moderation_db

# SSL/TLS Configuration
SSL_DOMAIN=YOUR_DOMAIN.com

# Docker Compose project name
COMPOSE_PROJECT_NAME=comment-system